<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="test_sql">
	<select id="selectAll" resultType="com.spring.sample.VO.UserInfoVO">
		<![CDATA[
			SELECT
				id, pw
				
			FROM
				user_info;
		]]>
	</select>
	
	<select id="selectUserInfoWithId" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				id, pw
				
			FROM
				user_info
				
			WHERE
				id = #{id};
		]]>
	</select>
	
	<insert id="upsertUserInfo" parameterType="hashmap">
		<![CDATA[
			INSERT INTO
				user_info
			
			VALUES
				(#{id}, #{pw})
				
			ON DUPLICATE KEY UPDATE
				pw = #{pw};
		]]>
	</insert>
	
	<update id="updateUserInfo" parameterType="hashmap">
		<![CDATA[
			UPDATE
				user_info
			
			SET
				pw = #{pw}
			
			WHERE
				id = #{id};
		]]>
	</update>
	
	<delete id="deleteUserInfo" parameterType="hashmap">
		<![CDATA[
			DELETE FROM
				user_info
			
			WHERE
				id = #{id};
		]]>
	</delete>
</mapper>
